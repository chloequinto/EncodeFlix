<div class="movieSelection"> 
    <h4>Movie Selection</h4>



    <div class="row-fluid "></div>     
        <div class="card-deck">
        {{# each content}}
            <div class="col-sm-4 ">
            <div class="card-columns-fluid">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">ID: {{this.movieID}}</h5>
                        <p class="card-text">{{this.movieName}}</p>
                        <a href="#" class="btn btn-primary" id="likeID" onClick="findID({{this.movieID}})">Like</a>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">TODO: Add Genre</small>
                    </div>
                </div>
            </div>
            </div>
        {{/each}}

        </div>
    </div>
     

    
</div>

<div class="footer">
    <a href="/logout" class="btn btn-outline-danger">Logout</a>
</div>


<script src="/public/js/home.js"></script>

